{
    "name": "streamplay",
    "version": "1.0.0",
    "description": "Netflix Clone Electron App",
    "repository": {
        "type": "git",
        "url": "https://github.com/anto0102/Streamplay.git"
    },
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "package": "electron-builder build --linux --x64",
        "package:win": "electron-builder build --win --x64",
        "package:all": "electron-builder build --linux --win --x64"
    },
    "dependencies": {
        "electron-serve": "^1.3.0",
        "electron-updater": "^6.7.3"
    },
    "devDependencies": {
        "electron": "^33.0.0",
        "electron-builder": "^24.13.3"
    },
    "build": {
        "appId": "com.anto.streamplay",
        "productName": "Streamplay",
        "publish": [
            {
                "provider": "github",
                "owner": "anto0102",
                "repo": "Streamplay"
            }
        ],
        "files": [
            "main.js",
            "preload.js",
            "out/**/*"
        ],
        "linux": {
            "target": "AppImage",
            "category": "Video"
        },
        "win": {
            "target": "portable",
            "icon": "public/favicon.ico"
        }
    }
}